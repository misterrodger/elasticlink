{
  "name": "elasticlink",
  "version": "0.4.1-beta",
  "description": "Type-safe, lightweight Elasticsearch query builder with fluent API",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "audit": "better-npm-audit audit --level=high",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/misterrodger/elasticlink.git"
  },
  "author": "misterrodger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/misterrodger/elasticlink/issues"
  },
  "homepage": "https://github.com/misterrodger/elasticlink#readme",
  "keywords": [
    "elasticsearch",
    "query-builder",
    "typescript",
    "type-safe",
    "typesafe",
    "elastic",
    "search",
    "query-dsl",
    "query-builder",
    "fluent-api",
    "type-safety",
    "strongly-typed",
    "autocomplete",
    "elasticsearch-client",
    "query-dsl",
    "chain",
    "chainable"
  ],
  "peerDependencies": {
    "@elastic/elasticsearch": ">=9.0.0"
  },
  "devDependencies": {
    "@elastic/elasticsearch": "^9.3.2",
    "@eslint/js": "^10.0.1",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/eslint-plugin": "^1.6.9",
    "better-npm-audit": "^3.11.0",
    "eslint": "^10.0.2",
    "eslint-plugin-functional": "^9.0.4",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  }
}
